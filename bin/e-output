#! /bin/bash

if [[ -f "/Volumes/rdisk/ramdisk-id" ]]; then
    OUTPUT_DIR="/Volumes/rdisk/e-output"
else
    OUTPUT_DIR="/tmp/e-output"
fi
mkdir -p "$OUTPUT_DIR"

DT=$(date +%Y-%m%d-%H%M)
OUT="$OUTPUT_DIR"/e-output.${DT}.$$.out
ERR="$OUTPUT_DIR"/e-output.${DT}.$$.err
exit_code=0

if [ $# -lt 1 ]; then
    cat >"$OUT" 2>"$ERR"
else
    "$@" >"$OUT" 2>"$ERR" || exit_code=1
fi
if [ -s "$ERR" ]; then
    echo '\n\n=======================================================' >> "$ERR"
    cat "$OUT" >> "$ERR"
    rm "$OUT"
else
    mv "$OUT" "$ERR"
fi
~/bin/e "$ERR"
(sleep 120; rm "$ERR") &
exit $exit_code
